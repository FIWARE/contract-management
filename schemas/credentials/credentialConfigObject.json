{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "credentialConfigObject.json",
  "title": "Credential Configuration Object",
  "description": "Concrete Credential Configuration object.",
  "type": "object",
  "properties": {
    "credentialsType": {
      "description": "The type of the Credential to be configured.",
      "type": "string",
      "examples": [
        "OperatorCredential"
      ]
    },
    "claims": {
      "description": "A list of restrictions to be applied for the credentials claims. If empty, everything is allowed for the credential.",
      "type": "array",
      "items": {
        "$ref": "./claims.json"
      }
    }
  },
  "required": [
    "credentialsType",
    "claims"
  ]
}